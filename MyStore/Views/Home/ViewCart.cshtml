@model List<CartItemVM>

@if (Model.Count() != 0)
{
    <div class="row justify-content-between mt-4">
        <div class="col-4">
            <h4>Items de Carrito</h4>
        </div>
        <div class="col-4 text-end">
            @*aue rediriga al metodo AddEdit [get] de categoryController*@
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Pagar ahora
            </button>
        </div>
    </div>
    <hr />

    <table class="table table-striped">
        <thead>
            <tr>

                <th style="width:120px"></th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td style="width:120px">
                        <img class="card-img-top rounded" src="~/images/@item.ImageName" alt="Nombre de la imagen"
                             loading="lazy" style="width:100px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price * item.Quantity).ToString("C2"))</td>
                    <td style="width:120px">
                        <a href="/Home/RemoveItemToCart?productId=@item.ProductId" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>

                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else
{

    <div class="alert alert-warning mt-4" role="alert">
        No hay mas productos en el carrito
    </div>

}
<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

        <form action="/Home/PayNow" method="post">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row g-3">
    <div class=" col-12">
        <input type="email" class="form-control" placeholder="Email" />
    </div>
    <div class=" col-12">
        <input type="text" class="form-control" placeholder="Direccion" />
    </div>
    <div class=" col-6">
        <input type="text" class="form-control" placeholder="Pais" />
    </div>
    <div class=" col-6">
        <input type="text" class="form-control" placeholder="Ciudad" />
    </div>
    <hr />
    <div class=" col-12">
        <input type="text" class="form-control" placeholder="Nombre de propietario de tarjeta" />
    </div>
    <div class=" col-12">
        <input type="number" class="form-control" placeholder="Numero de tarjeta" />
    </div>
    <div class=" col-3">
        <input type="number" class="form-control" placeholder="MM" />
    </div>
    <div class="col-3">
        <input type="number" class="form-control" placeholder="YYYY" />
    </div>
    <div class=" col-6">
        <input type="number" class="form-control" placeholder="CVV" />
    </div>
</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
      </div>

      </form>
    </div>
  </div>
</div>